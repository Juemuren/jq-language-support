{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "jq",
  "scopeName": "source.jq",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#definitions" },
    { "include": "#keywords" },
    { "include": "#builtins" },
    { "include": "#operators" },
    { "include": "#numbers" },
    { "include": "#properties" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [{
        "name": "comment.line.number-sign.jq",
        "match": "#.*$"
      }]
    },
    "strings": {
      "name": "string.quoted.double.jq",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.jq",
          "match": "\\\\."
        },
        {
          "name": "meta.embedded.line.jq",
          "begin": "\\\\\\(",
          "end": "\\)",
          "patterns": [{ "include": "source.jq" }]
        }
      ]
    },
    "definitions": {
      "match": "\\b(def)\\s+([a-zA-Z_][a-zA-Z0-9_]*)(?:\\(([^)]*)\\))?(:)",
      "captures": {
        "1": { "name": "keyword.control.def.jq" },
        "2": { "name": "entity.name.function.definition.jq" },
        "3": { "name": "variable.parameter.jq" },
        "4": { "name": "punctuation.separator.jq" }
      }
    },
    "keywords": {
      "patterns": [{
        "name": "keyword.control.jq",
        "match": "\\b(if|then|else|elif|end|reduce|foreach|as|try|catch|label|break|import|include|module)\\b"
      }]
    },
    "builtins": {
      "patterns": [{
        "name": "support.function.builtin.jq",
        "match": "\\b(length|keys|map|select|has|contains|unique|sort|group_by|to_entries|from_entries|split|join|tostring|tonumber|range|limit|isempty|error|empty|debug|type|infinite|nan|in|inside|paths|del|recurse|walk|transpose|bsearch)\\b"
      }]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.jq",
          "match": "(\\|\\=|\\/\\/\\=|\\=)"
        },
        {
          "name": "keyword.operator.pipe.jq",
          "match": "\\|"
        },
        {
          "name": "keyword.operator.comparison.jq",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.jq",
          "match": "(\\+|\\-|\\*|\\/|%)"
        },
        {
          "name": "punctuation.separator.jq",
          "match": "(\\;|\\,|\\:)"
        },
        {
          "name": "meta.brace.jq",
          "match": "(\\{|\\}|\\[|\\]|\\(|\\))"
        }
      ]
    },
    "properties": {
      "patterns": [{
        "name": "variable.other.property.jq",
        "match": "(\\.[a-zA-Z_][a-zA-Z0-9_]*)"
      }]
    },
    "variables": {
      "patterns": [{
        "name": "variable.other.readwrite.jq",
        "match": "(\\$[a-zA-Z_][a-zA-Z0-9_]*)"
      }]
    },
    "numbers": {
      "name": "constant.numeric.jq",
      "match": "\\b\\d+(\\.\\d+)?([eE][+-]?\\d+)?\\b"
    }
  }
}